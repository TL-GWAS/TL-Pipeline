process {
    memory = { 8.GB * task.attempt }
    time = { 48.hour * task.attempt }
    cpus = 1

    withLabel: multithreaded {
        memory = { 8.GB * task.attempt }
        time = { 48.hour * task.attempt }
        cpus = 2
    }

    withLabel: bigmem {
        memory = { 50.GB * task.attempt }
        time = { 48.hour * task.attempt }
        cpus = 1
    }
    
    withLabel: largemem {
        memory = {100.GB * task.attempt}
        cpus = 10
    }

    withLabel: tmlemem {
        memory = { 30.GB * task.attempt }
        time = { 24.hour * task.attempt }
        cpus = 2
    }
}